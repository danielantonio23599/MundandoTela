<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
    tools:context="com.example.daniel.mundandotela.Calculadora2Activity">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="495dp"
            android:background="@android:color/background_light"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:onClick="onClicBotao"
                android:text="Volar" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.58"
                android:background="@android:color/background_light"
                android:text="Calculadora"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/background_light" />

            <EditText
                android:id="@+id/etVisor"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.86"
                android:background="@android:color/background_light"
                android:ems="10"
                android:foregroundTint="@android:color/background_light"
                android:inputType="numberDecimal"
                android:textColor="?android:attr/colorActivatedHighlight" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="398dp">

                <Button
                    android:id="@+id/btnDel"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="excluirUltimaLetra"
                    android:text="DEL" />

                <Button
                    android:id="@+id/btnMaisOuMenos"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:backgroundTint="@android:color/background_light"
                    android:text="+/-" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num6"
                    android:text="6" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num5"
                    android:text="5" />

                <Button
                    android:id="@+id/btnX"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="multiplicar"
                    android:text="X"
                    android:textColor="?android:attr/colorFocusedHighlight" />

                <Button
                    android:id="@+id/btnDivisao"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="dividir"
                    android:text="/"
                    android:textColor="?android:attr/colorFocusedHighlight" />

                <Button
                    android:id="@+id/btnPorcentagem"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:backgroundTint="@android:color/background_light"
                    android:text="%" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num9"
                    android:text="9" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_weight="0.04"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num8"
                    android:text="8" />

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num7"
                    android:text="7" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num4"
                    android:text="4" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num1"
                    android:text="1" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num2"
                    android:text="2" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num3"
                    android:text="3" />

                <Button
                    android:id="@+id/btnSub"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="subtrair"
                    android:text="-"
                    android:textColor="?android:attr/colorActivatedHighlight" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num0"
                    android:text="0" />

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="operadorCE"
                    android:text="C" />

                <Button
                    android:id="@+id/btnPonto"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="num"
                    android:text="." />

                <Button
                    android:id="@+id/btnIgual"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="2"
                    android:layout_row="4"
                    android:backgroundTint="?android:attr/colorFocusedHighlight"
                    android:onClick="igual"
                    android:text="="
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/btnSoma"
                    android:layout_width="92dp"
                    android:layout_height="73dp"
                    android:layout_column="3"
                    android:layout_row="4"
                    android:backgroundTint="@android:color/background_light"
                    android:onClick="somar"
                    android:text="+"
                    android:textColor="?android:attr/colorFocusedHighlight" />

            </GridLayout>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
